{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",  // 添加这行，设置为 ES2018 或更高
    "lib": ["DOM", "ES2018", "ESNext"],  // 添加这行
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node", "electron"],
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "esModuleInterop": true,  // 添加这行
    "resolveJsonModule": true,  // 添加这行
    "strict": true,  // 添加这行，增强类型检查
    "moduleResolution": "node" , // 添加这行

  },
  "include": [
    "src/**/*",
    "global.d.ts"

  ]
}